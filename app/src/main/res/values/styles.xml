<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- =============================================================== -->
    <!-- Styles for Caeli theme -->
    <!-- =============================================================== -->

    <style name="saqText">
        <item name="android:textColor">@color/saqTextColor</item>
        <item name="android:fontFamily">@font/raleway_regular_local</item>
    </style>

    <style name="WhiteText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/raleway_extralight_local</item>
        <item name="android:textColorHint">#A9A9A9</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="android:breakStrategy">simple</item>
    </style>

    <style name="DrawerText">
        <item name="android:fontFamily">@font/raleway_extralight_local</item>
    </style>

    <style name="TableText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/raleway_regular_local</item>
    </style>

    <style name="TableBGyellow">
        <item name="android:background">@color/caeli_yellow_light</item>
    </style>

    <style name="TableBGred">
        <item name="android:background">@color/caeli_red_light</item>
    </style>

    <style name="TableBGpurple">
        <item name="android:background">@color/caeli_purple_light</item>
    </style>

    <style name="TableBGgreen">
        <item name="android:background">@color/caeli_green_light</item>
    </style>

    <style name="DarkText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#707070</item>
        <item name="android:fontFamily">@font/raleway_regular_local</item>
        <item name="android:textColorHint">#A9A9A9</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
        <item name="android:breakStrategy">simple</item>
    </style>

    <style name="EmailBackground">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">@dimen/card_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_margin</item>
        <item name="android:padding">@dimen/bg_padding</item>
        <item name="android:paddingBottom">40dp</item>
    </style>

    <style name="Spinner">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/raleway_regular_local</item>
    </style>

    <style name="BlueBackground">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:background">@drawable/bgcaelitoolbar</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="GreyToolbarFont_extralight">
        <item name="android:fontFamily">@font/raleway_extralight_local</item>
        <item name="android:textColorPrimary">@color/saqTextColor</item>
        <item name="android:textColorSecondary">@color/saqTextColor</item>
    </style>

    <style name="GreyToolbarFont">
        <item name="android:fontFamily">@font/raleway_regular_local</item>
        <item name="android:textColorPrimary">@color/saqTextColor</item>
        <item name="android:textColorSecondary">@color/saqTextColor</item>
    </style>

    <style name="WhiteToolbarFont_extralight">
        <item name="android:fontFamily">@font/raleway_extralight_local</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/caeli_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/raleway_regular_local</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SwitchColors" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/blue</item>
        <item name="android:colorForeground">#000000</item>
    </style>

    <style name="Checkbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CaeliAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:elevation">0dp</item>
    </style>


</resources>
